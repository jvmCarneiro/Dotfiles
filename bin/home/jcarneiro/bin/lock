#!/bin/sh -e

icon="$HOME/Pictures/icon.png"
tmpbg='/tmp/screen.png'

(( $# )) && { icon=$1; }

# Take a screenshot
scrot $tmpbg

# Pixellate it 10x
convert $tmpbg -scale 10% -scale 1000% $tmpbg
convert $tmpbg $icon -gravity center -composite -matte $tmpbg

# Lock screen displaying this image.
i3lock -u -i $tmpbg
