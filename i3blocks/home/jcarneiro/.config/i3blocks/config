# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
label=
command=~/.config/i3blocks/scripts/memory
min_width='100%'
interval=1
#
##[memory]
##label=SWAP
##instance=swap
##separator=false
##interval=30

# CPU usage
#
[cpu_usage]
label=
command=~/.config/i3blocks/scripts/cpu_usage -d 0
min_width='100%'
interval=1

# Wifi signal strenght
#
[wifi]
label=
instance=wlp2s0
min_width='100%'
interval=5

# Network interface monitoring
#
# If the instance is not specified, use the interface used for default route.
# The address can be forced to IPv4 or IPv6 with -4 or -6 switches.
[iface]
#instance=wlan0
command=~/.config/i3blocks/scripts/iface -L
label=
color=#00FF00
interval=10

# External storages
#
#[usb]
#command=~/.config/i3blocks/scripts/usb -i sda1 -i sda3
#interval=10

# New mail checker
#
[email]
label=
command=~/.config/i3blocks/scripts/email
interval=60

# Shows update state
#
[pacman-update]
label=
command=~/.config/i3blocks/scripts/arch-update.py -a -b "#5fff5f" -u "#FFFF85"
markup=pango
interval= 3600

# Battery indicator
#
[battery]
command=~/.config/i3blocks/scripts/battery2
markup=pango
interval=5

# Calendar
#
[rofi-calendar]
command=~/.config/i3blocks/scripts/rofi-calendar
label=
interval=3600

# Date Time
#
[time]
label=
command=date '+%H:%M'
interval=1
