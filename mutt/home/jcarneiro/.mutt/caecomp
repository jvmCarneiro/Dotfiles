#
# Configuration files for my personal account
#

# Get encrypted passwords
source "gpg -d ~/.mutt/passwords_caecomp.gpg |"

# Receive options
set imap_user = "ufba.caecomp@gmail.com"
set folder = imaps://ufba.caecomp@imap.googlemail.com/
set spoolfile = +INBOX
set postponed = +"[Gmail]/Rascunhos"
set record = +"[Gmail]/E-mails enviados"
set trash = +"[Gmail]/Lixeira"

# Send options
set smtp_url = "smtps://ufba.caecomp@gmail.com@smtp.gmail.com:465"
set realname = 'Jo√£o Victor Carneiro'
set from = jvmcarneiro@gmail.com
set hostname = "gmail.com"
set signature = "~/.mutt/signature"
set ssl_force_tls = yes
set copy = no

# Hook to change account when entering folder
account-hook $folder "set imap_user=ufba.caecomp@gmail.com"
