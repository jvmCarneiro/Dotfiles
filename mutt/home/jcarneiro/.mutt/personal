#
# Configuration files for my personal account
#

# Get encrypted passwords
source "gpg -d ~/.mutt/passwords_personal.gpg |"

# Receive options
set imap_user = "jvmcarneiro@gmail.com"
set folder = "imaps://jvmcarneiro@imap.googlemail.com/"
set spoolfile = +"INBOX"
set postponed = +"[Gmail]/Rascunhos"
set record = +"[Gmail]/E-mails enviados"
set trash = +"[Gmail]/Lixeira"

# Send options
set smtp_url = "smtps://jvmcarneiro@gmail.com@smtp.gmail.com:465"
set realname = 'Jo√£o Carneiro'
set from = "jvmcarneiro@gmail.com"
set hostname = "gmail.com"
set signature = "~/.mutt/signature"
set ssl_force_tls = yes
set copy = no

# Hook to change account when entering folder
account-hook $folder "set imap_user=jvmcarneiro@gmail.com"
