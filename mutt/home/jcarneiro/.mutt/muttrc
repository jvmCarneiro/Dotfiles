#
# Configuration files for (neo)mutt
#

source ~/.mutt/sidebar
source ~/.mutt/vim
source ~/.mutt/pgp

# caches
set header_cache="~/.cache/mutt"

# automatic viewing html
auto_view text/html

# intervals
set read_inc = 100
set mail_check = 60
set timeout = 30
set imap_keepalive=300

# sorting
set sort = reverse-date

# fetch subscribed folders
set imap_check_subscribed

# do not open new connections to check for mail
unset imap_passive

# default type when creating new folders
set mbox_type=Maildir

# CAECOMP account options
source "~/.mutt/caecomp"
folder-hook $folder 'source ~/.mutt/caecomp'

# Personal account options
source "~/.mutt/personal"
folder-hook $folder 'source ~/.mutt/personal'

# Change accounts keybinds
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/personal<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/caecomp<enter><change-folder>!<enter>'
macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'
