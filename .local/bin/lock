#!/bin/sh

B='#00000000'  # blank
C='#2e344022'  # clear ish
D='#2e3440ff'  # default
T='#88c0d0ff'  # text
W='#bf616aff'  # wrong
V='#88c0d0ff'  # verifying

i3lock \
--insidevercolor=$D   \
--ringvercolor=$V     \
\
--insidewrongcolor=$D \
--ringwrongcolor=$W   \
\
--insidecolor=$D      \
--ringcolor=$D        \
--linecolor=$B        \
--separatorcolor=$D   \
\
--verifcolor=$V       \
--wrongcolor=$W       \
--timecolor=$T        \
--datecolor=$T        \
--layoutcolor=$T      \
--keyhlcolor=$V       \
--bshlcolor=$W        \
\
--screen 1            \
--blur 5              \
--clock               \
--indicator           \
--datesize 16         \
--timestr="%H:%M:%S"  \
--datestr="%A, %B %e" \
\
--veriftext="Verifying"  \
--wrongtext="Wrong"      \
--noinputtext="No Input" \
\
--time-font="UbuntuMono Nerd Font" \
--date-font="UbuntuMono Nerd Font" \
